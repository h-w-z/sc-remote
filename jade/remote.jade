doctype html

html
  head
    meta(charset='utf-8')
    meta(content='width=device-width, initial-scale=1, maximum-scale=1.0, user-scalable=no', name='viewport')

    title Remote
    link(href='main.css', rel='stylesheet')
    link(href='//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css', rel='stylesheet')
    script
      | remoodType = 'remote';
  body
    main.content

      #searcher
        .row
          .col-xs-12
            .input-group
              span.input-group-btn
                button#search.btn.btn-default(type='button') Go
              input#search-term.form-control(placeholder='Search for...', type='text')

      #player.row
        .col-xs-4
          button#left.glyphicon.glyphicon-fast-backward
        .col-xs-4
          button#play.glyphicon.glyphicon-play
          button#pause.glyphicon.glyphicon-pause.hidden
        .col-xs-4
          button#right.glyphicon.glyphicon-fast-forward

      #search-results.row
        ul

    script(src='//cdnjs.cloudflare.com/ajax/libs/socket.io/1.3.5/socket.io.min.js')
    script(src='//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js')
    script(src='//connect.soundcloud.com/sdk.js')
    script(src='//cdn.rawgit.com/tonekk/hash.js/master/hash.min.js')
    script(src='remood.js')
    script(src='remote.js')
